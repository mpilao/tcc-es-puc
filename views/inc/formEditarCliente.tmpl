<form class="editar" name="editarCliente" id="editarCliente" method="POST">            
    <div class="row">
        <div class="col-md">
            <div class="form-label-group">
                <input type="text" id="id" class="form-control" placeholder="ID"  name="id" value="<@ID_CLIENTE>" hidden>
                <input type="text" id="nome" class="form-control" placeholder="Nome" required autofocus name="nome" pattern="(\w.+\s).+" value="<@NOME_CLIENTE>">
                <label for="nome">Nome*</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <div class="form-label-group">
                <input type="text" id="cpf" class="form-control cpf" placeholder="012.345.678.90" required name="cpf" pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" value="<@CPF_CLIENTE>" readonly>
                <label for="cpf">CPF*</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-label-group">
                <input type="text" id="rg" class="form-control rg" placeholder="RG" required  name="rg" pattern="\d{2}\.?\d{3}\.?\d{3}-?\d{1,2}" value="<@RG_CLIENTE>" readonly>
                <label for="rg">RG*</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <div class="form-label-group">
                <input type="text" id="endereco" class="form-control" placeholder="Endereço" required  name="endereco" pattern="(\w.+\s).+" value="<@ENDERECO_CLIENTE>">
                <label for="endereco">Endereço*</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <div class="form-label-group">
                <input type="password" id="biometria" class="form-control" required  name="biometria" value="<@BIOMETRIA_CLIENTE>">
                <label for="endereco">Biometria*</label>
            </div>
        </div>
        <div class="col-md">
            <button type="button" class="btn btn-lg btn-secondary btn-block btn-add-biometria d-none" onclick="gerarBiometria($('#biometria'), this);">Cadastrar Biometria</button>
            <button type="button" class="btn btn-lg btn-danger btn-block btn-remove-biometria d-none" onclick="removeBiometria($('#biometria'), this);">Remover Biometria</button>                    
        </div>  
    </div>
    
    <!-- se for plano anual -->
    <div class="row">
        <div class="col-md">
            <div class="form-label-group">    
                <select class="form-control" id="tipo-plano" name="tipo-plano" required value="<@TIPO_PLANO_CLIENTE>">
                    <option value="">Tipo de Plano*</option>
                    <option value="0">Anual</option>
                    <option value="1">Mensal</option>
                </select>
            </div>
        </div>
        <div class="col-md">
            <div class="form-label-group ferias-cliente">
                <input type="text" id="ferias-dias-utilizados" class="form-control" placeholder="Início das Férias" name="ferias-dias-utilizados" value="<@FERIAS_UTILIZADAS_CLIENTE>" readonly>
                <label for="ferias-dias-utilizados">Dias de férias utilizados</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-label-group ferias-cliente">
                <input type="text" id="ferias-dias-restantes" class="form-control" placeholder="Final das Férias" name="ferias-dias-restantes" value="<@FERIAS_DISPONIVEIS_CLIENTE>" readonly>
                <label for="ferias-dias-restantes">Dias de férias disponíveis</label>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md">
            <div class="form-label-group ferias-cliente">
                <input type="text" id="ferias-inicio" class="form-control" placeholder="Início das Férias" name="ferias-inicio" value="<@FERIAS_INICIO_CLIENTE>" onchange="calculaFerias(this);" min="<@DIA_AMANHA>" autocomplete="off" readonly>
                <label for="ferias-inicio">Início das Férias</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-label-group ferias-cliente">
                <input type="text" id="ferias-final" class="form-control" placeholder="Final das Férias" name="ferias-final" value="<@FERIAS_FIM_CLIENTE>" min="<@FERIAS_INICIO_CLIENTE>" max="<@FERIAS_FIM_CLIENTE>" readonly autocomplete="off">
                <label for="ferias-final">Final das Férias</label>
            </div>
        </div>
    </div>
    
    <!-- #se for plano anual -->
    
    
    
    <div class="row">
        <div class="col-md">
            <a class="btn btn-lg btn-secondary btn-block" href="listagemCliente.php">Cancelar</a>
        </div>
        <div class="col-md">
            <a class="btn btn-lg btn-secondary btn-block text-white" data-toggle="modal" data-target="#editModal">Salvar</a>
        </div>
    </div>
    
</form>